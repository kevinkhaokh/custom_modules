<?xml version="1.0" encoding ="utf-8"?>
<openerp>
	<data>
		<record id="view_partner_form_legal_name" model="ir.ui.view">
			<field name="name">base.view_partner_form.dih_legal_name</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<field name="street" position="before">
					<field name="legal_name"/>
				</field>
			</field>
		</record>
		<record id="view_partner_filter_legal_name" model="ir.ui.view">
			<field name="name">base.view_partner_form.dih_legal_name_search</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_res_partner_filter"/>
			<field name="arch" type="xml">
				<field name="name" position="after">
					<field name="legal_name"/>
				</field>
			</field>
		</record>
	</data>
</openerp>
