<?xml version="1.0" encoding="UTF-8"?><openerp>	<data>		<!-- Action to open window -->		<act_window id="action_journal_control" name="Journal Control Menu Action" res_model="account.move.line" view_mode="tree,form" view_id="view_dih_journal_control_tree""/> <!--  context="{'group_by' : 'journal_id'} -->		<!-- Menuitem to open window -->		<menuitem id="menu _journal_control" name="Journal Control" parent="account.menu_finance_entries" sequence="21" action="action_journal_control"/>				<!-- Define Tree View for Journal Control -->        <record id="view_dih_journal_control_tree" model="ir.ui.view">            <field name="name">account.journal_control.tree</field>            <field name="model">account.move.line</field>            <field eval="1" name="priority"/>            <field name="arch" type="xml">                <tree colors="red:state == 'draft';black:state == 'valid'" string="Journal Items" create="true" on_write="on_create_write" editable="top">                    <field name="journal_id" options='{"no_open":True}'/>                    <field name="period_id" options='{"no_open":True}'/>                    <field name="date"/>                    <field name="name"/>                    <field name="ref"/>                    <field name="statement_id" invisible="1"/>                    <field name="partner_id"                        domain="['|', ('parent_id', '=', False), ('is_company', '=', True)]"                        on_change="onchange_partner_id(move_id, partner_id, account_id, debit, credit, date, journal_id)"/>                    <field name="account_id" options='{"no_open":True}' domain="[('journal_id','=',journal_id), ('company_id', '=', company_id)]" on_change="onchange_account_id(account_id, partner_id, context)"/>                    <field name="account_tax_id" options='{"no_open":True}' invisible="context.get('journal_type', False) not in ['sale','sale_refund','purchase','purchase_refund','general']"/>                    <field name="analytic_account_id" groups="analytic.group_analytic_accounting" domain="[('type','not in',['view','template'])]" invisible="not context.get('analytic_journal_id',False)"/>                    <field name="move_id" required="0"/>                    <field name="debit" sum="Total Debit"/>                    <field name="credit" sum="Total Credit"/>                    <field name="date_maturity" invisible="context.get('journal_type', False) not in ['sale','sale_refund','purchase','purchase_refund']"/>                    <field name="reconcile_ref"/>                    <field name="invoice" invisible="1"/>                    <field name="amount_currency" readonly="True" invisible="not context.get('currency',False)"/>                    <field name="currency_id" readonly="True" invisible="not context.get('currency',False)" />                    <field name="state" invisible="1"/>                    <field name="company_id" invisible="1"/>                </tree>            </field>        </record>	</data></openerp>